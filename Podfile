# Uncomment the next line to define a global platform for your project

target 'Typyst (iOS)' do
  platform :ios, '14.0'

  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Typyst (iOS)
  # pod 'HotKey'
  pod 'Keyboard-Kit'
  pod 'SwiftyBeaver'
  pod 'SwiftySound'
end

target 'Typyst (macOS)' do
  platform :macos, '11.0'

  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Typyst (macOS)
  pod 'GBDeviceInfo'
  pod 'SwiftyBeaver'
  pod 'SwiftySound'
end
